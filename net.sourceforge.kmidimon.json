{
  "app-id": "net.sourceforge.kmidimon",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15-21.08",
  "sdk": "org.kde.Sdk",
  "command": "kmidimon",
  "rename-icon": "kmidimon",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_ALSA=ON",
        "-DBUILD_FILE=ON",
        "-DBUILD_RT=OFF",
        "-DBUILD_WIDGETS=OFF",
        "-DBUILD_DOCS=OFF",
        "-DBUILD_UTILS=OFF",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "post-install": [
        "install drumstick.xml -D /app/share/mime/packages/${FLATPAK_ID}.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.6.0/drumstick-2.6.0.tar.bz2",
          "sha256": "f2bf804b97a63f001b28eedebc87897756e222ea1fa16f26ef244fe2695ce98a"
        }
      ]
    },
    {
      "name": "kmidimon",
      "buildsystem": "cmake-ninja",
      "config-opts": [ "-DBUILD_DOCS=OFF" ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/kmidimon/1.3.0/kmidimon-1.3.0.tar.bz2",
          "sha256": "80d7e4d45bb748b58ae717c2f7f55f27f080ef86824f5ad03e116425d1d559b9"
        }
      ]
    }
  ]
}
